<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="cn.xeon.sample.bezier.MainActivity">


    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_normal"
            android:layout_width="0dp"
            android:padding="16dip"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="1"
            android:text="normal"/>

        <TextView
            android:id="@+id/tv_curve"
            android:layout_width="0dp"
            android:padding="16dip"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="1"
            android:text="curve"/>

        <TextView
            android:id="@+id/tv_bezier"
            android:layout_width="0dp"
            android:padding="16dip"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="1"
            android:text="bezier"/>
    </LinearLayout>

    <Spinner
        android:id="@+id/spinner"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </Spinner>
    <LinearLayout
        android:visibility="gone"
        android:id="@+id/ll_bezier"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginRight="8dip"
        android:layout_marginLeft="8dip"
        android:orientation="horizontal">
        <SeekBar
            android:id="@+id/sb_view"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_value"
            android:paddingLeft="4dip"
            android:paddingRight="4dip"
            android:text="0.00"/>
        <CheckBox
            android:id="@+id/cb_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="auto"/>
    </LinearLayout>
    <cn.xeon.sample.bezier.lib.NormalView
        android:id="@+id/bv_normal"
        android:background="#ff000000"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <cn.xeon.sample.bezier.lib.CurveView
        android:id="@+id/bv_curve"
        android:background="#ff000000"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <cn.xeon.sample.bezier.lib.BezierView
        android:id="@+id/bv_bezier"
        android:background="#ff000000"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>



</LinearLayout>
